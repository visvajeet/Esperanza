<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/clg_pic"
            android:id="@+id/collapsing"
            app:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:src="@drawable/clgcampus"
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_collapseMode="parallax"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/es_pic" />

            <android.support.v7.widget.Toolbar
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar_about"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/fill3"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:scaleType="centerInside"
                        android:src="@drawable/logo_ez"
                      android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="3dp"
                        android:id="@+id/title99"
                        android:contentDescription="@string/logo_ez" />


                    <TextView
                        android:textSize="15dp"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_esperanza2k17"/>

                </LinearLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:text="@string/quick_links"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/links"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/fb_link"
                        android:background="@drawable/fbb"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:contentDescription="@string/facebook_link">
                    </ImageButton>


                    <ImageButton
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/insta_link"
                        android:background="@drawable/insta"
                        android:layout_weight="2"
                        android:contentDescription="@string/insta_link" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/twitter_link"
                        android:background="@drawable/twit"
                        android:layout_weight="2"
                        android:contentDescription="@string/twitter_link" />

                    <ImageButton
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/web_link"
                        android:background="@drawable/web"
                        android:layout_weight="2"
                        android:contentDescription="@string/insta_link" />

                </LinearLayout>






                <ScrollView
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_margin="2dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/dheeraj"
                        android:background="@drawable/fill3"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:text="@string/dheeraj"
                            android:gravity="center|bottom"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/name2" />

                        <TextView

                            android:text="@string/main_coordinator"
                            android:layout_margin="2dp"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/work1" />

                        <TextView
                            android:text="@string/_9902262634"
                            android:layout_gravity="end"
                            android:gravity="center|top"
                            android:textSize="14dp"
                            android:layout_weight="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/numb" />

                        <TextView
                            android:text="@string/tap_to_contact"
                            android:textSize="12dp"
                            android:gravity="end"
                            android:layout_margin="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:layout_weight="0" />

                    </LinearLayout>

                        <LinearLayout

                            android:layout_below="@id/dheeraj"
                            android:id="@+id/amey"
                            android:background="@drawable/fill3"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:text="Amey"
                                android:gravity="center|bottom"
                                android:textStyle="bold"
                                android:textSize="19dp"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/namee" />

                            <TextView
                                android:text="@string/main_coordinator"
                                android:layout_margin="2dp"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/woork" />

                            <TextView
                                android:text="@string/_8095925893"
                                android:layout_gravity="end"
                                android:gravity="center|top"
                                android:textSize="14dp"
                                android:layout_weight="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/numberr" />

                            <TextView
                                android:text="@string/tap_to_contact"
                                android:textSize="12dp"
                                android:gravity="end"
                                android:layout_margin="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView222"
                                android:layout_weight="0" />




                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/vishu"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@id/amey"
                            android:background="@drawable/fill3"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:text="VisvaJeet"
                                android:gravity="center|bottom"
                                android:textStyle="bold"
                                android:textSize="19dp"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/name" />

                            <TextView
                                android:text="@string/android_developer"
                                android:layout_margin="2dp"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/work" />

                            <TextView
                                android:text="9983214776"
                                android:layout_gravity="end"
                                android:gravity="center|top"
                                android:textSize="14dp"
                                android:layout_weight="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/number" />

                            <TextView
                                android:text="@string/tap_to_contact"
                                android:textSize="12dp"
                                android:gravity="end"
                                android:layout_margin="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView22"
                                android:layout_weight="0" />




                        </LinearLayout>


                    </RelativeLayout>




                </ScrollView>


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>







</android.support.design.widget.CoordinatorLayout>