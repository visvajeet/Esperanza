<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vishu4484.esperanza.MainActivity">


    <android.support.v7.widget.Toolbar
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:elevation="5dp"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolbar_partake"
        app:title="Sign Up"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <ScrollView

        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_signIn"
        android:layout_below="@+id/toolbar_partake">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
        android:animateLayoutChanges="true"
        android:background="@drawable/fill"
        android:orientation="vertical"
       android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:id="@+id/signIn_layout"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1">


            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pesitbsc"
                android:id="@+id/pesLogo1"
                android:contentDescription="@string/pes_logo_1" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/earth"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/earth1"
                android:contentDescription="@string/pes_logo_1" />
        </RelativeLayout>


        <TextView
            android:layout_marginTop="15dp"
            android:text="@string/pesit_bsc"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pesit_bsc"
            android:layout_weight="1" />


        <TextView
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="1dp"
            android:text="@string/presents"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/presents"
            android:layout_weight="1"/>


                <ImageView
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_ez"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/title4"
                    android:contentDescription="@string/logo_ez" />
        <TextView

            android:text="@string/technical_fest_organized_by_mca_department"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mca_dept"
            android:layout_weight="1" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:id="@+id/email_take"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
            android:layout_width="match_parent"
            android:maxLength="30"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:imeOptions="flagNoExtractUi"
            android:backgroundTint="@color/black"
            android:textColor="@color/sky"
            android:textColorHint="@color/sky"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/email" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/password_take"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
            android:layout_width="match_parent"
            android:backgroundTint="@color/black"
            android:textColor="@color/sky"
            android:textColorHint="@color/sky"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:ems="10"
            android:id="@+id/password" />
       </android.support.design.widget.TextInputLayout>


        <Button

            android:text="@string/continuee"
            android:background="@color/sky"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/getIn"
            android:layout_weight="1" />

    </LinearLayout>



            <TextView

                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/need_help"
                android:layout_below="@+id/signIn_layout"
                android:id="@+id/forgot_pass"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <LinearLayout
                android:background="@color/white"
                android:animateLayoutChanges="true"
                android:id="@+id/signUpLayout"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_pass">



                <TextView

                    android:text="@string/don_t_have_an_account"
                    android:textSize="18dp"
                    android:gravity="center|end"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dont_have_ac"
                    android:layout_weight="1" />

                <TextView
                    android:textColor="@color/sky"
                    android:text="@string/sign_up"
                    android:textSize="17dp"
                    android:layout_marginLeft="7dp"
                    android:gravity="center|start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signUp"
                    android:layout_weight="1" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


    <ScrollView
        android:background="@color/white"
        android:layout_below="@+id/toolbar_partake"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_signUp">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:animateLayoutChanges="true"
                android:background="@drawable/fill"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:id="@+id/ll6"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/pesitbsc"
                        android:id="@+id/pesLogo2"
                        android:contentDescription="@string/pes_logo_1" />

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/earth"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/earth2"
                        android:contentDescription="@string/pes_logo_1" />

                </RelativeLayout>


                <TextView
                    android:layout_marginTop="20dp"
                    android:text="@string/pesit_bsc"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:layout_weight="1" />


                <TextView
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginTop="1dp"
                    android:text="@string/presents"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/present"
                    android:layout_weight="1"/>


                <ImageView
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_ez"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/title5"
                    android:contentDescription="@string/logo_ez" />
                <TextView

                    android:text="@string/technical_fest_organized_by_mca_department"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_weight="1" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="50dp"
                    android:id="@+id/name_take"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                        <EditText
                        android:drawableTint="@color/sky"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/sky"
                        android:backgroundTint="@color/black"
                        android:hint="@string/name"
                        android:maxLength="15"
                        android:textColorHint="@color/sky"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/name_makeAc" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/email_take_"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                       <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:maxLength="30"
                        android:imeOptions="flagNoExtractUi"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/sky"
                        android:textColorHint="@color/sky"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/email_makeAc" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/password_take_"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                        <EditText
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/sky"
                        android:textColorHint="@color/sky"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:inputType="textPassword"
                        android:hint="@string/password"
                        android:ems="10"
                        android:id="@+id/password_makeAc" />
                </android.support.design.widget.TextInputLayout>

                    <Button
                    android:text="@string/continuee"
                    android:background="@color/sky"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/makeAc"
                    android:layout_weight="1" />
            </LinearLayout>




            <LinearLayout
                android:background="@color/white"
                android:animateLayoutChanges="true"
                android:id="@+id/signInLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll6">

                <TextView

                    android:text="@string/already_have_an_account"
                    android:textSize="18dp"
                    android:gravity="center|end"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:layout_weight="1" />

                <TextView
                    android:textColor="@color/sky"

                    android:text="@string/sign_in"
                    android:layout_marginLeft="7dp"
                    android:textSize="17dp"
                    android:gravity="center|start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signIn"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

