<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"

    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vishu4484.esperanza.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:elevation="5dp"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/MyMenu"
        android:id="@+id/toolbar_main"
        app:title="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_main">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="2dp"
        android:id="@+id/slide"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">


            <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/main_pic"
            android:id="@+id/clg1"
                android:contentDescription="@string/clg_pic_1" />



    </android.support.v7.widget.CardView>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_layout"
        android:layout_below="@+id/es2017"

       android:layout_centerHorizontal="true">



        <android.support.v7.widget.CardView
           android:layout_width="wrap_content"
           android:layout_gravity="center"
           android:layout_height="wrap_content"
           app:cardElevation="5dp"
           app:cardUseCompatPadding="true"
           app:cardMaxElevation="5dp"
           android:layout_weight="1">

            <RelativeLayout
                android:background="@color/sky"
                android:layout_width="80dp"
                android:id="@+id/partake"
                android:textColor="@color/white"
                android:layout_height="110dp">

                <TextView
                    android:text="@string/p"
                    android:paddingBottom="5dp"
                    android:textSize="80dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/text_p"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:text="@string/participateE"
                    android:background="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_partake"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>
       </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardMaxElevation="5dp"
            android:layout_weight="1">



            <RelativeLayout
                android:background="@color/sky"
                android:layout_width="120dp"
                android:id="@+id/events"
                android:textColor="@color/white"
                android:layout_height="180dp">

                <TextView
                    android:text="@string/e"
                    android:paddingBottom="5dp"
                    android:textSize="120dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/text_e" />

                <TextView
                    android:background="@color/white"
                    android:text="@string/events"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_events"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardMaxElevation="5dp"
            android:layout_weight="1">

            <RelativeLayout
                android:background="@color/sky"
                android:layout_width="80dp"
                android:id="@+id/schedule"
                android:textColor="@color/white"
                android:layout_height="110dp">

                <TextView
                    android:text="@string/s"
                    android:paddingBottom="5dp"
                    android:textSize="80dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/text_s" />

                <TextView
                    android:text="@string/schedule"
                    android:textSize="12dp"
                    android:background="@color/white"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_schedule"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <TextView
        android:text="@string/esperanza_2k17"
        android:textSize="14dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/es2017" />

    <TextView
        android:text="@string/our_sponsors"
        android:textSize="14dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/our_sponsors" />


    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:id="@+id/slide2"
        android:layout_below="@+id/our_sponsors"
        android:layout_marginTop="5dp">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vf2">

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sp_quicklo"
                android:contentDescription="@string/clg_pic_1" />
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:padding="15dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sp_union_bank"
                android:contentDescription="@string/clg_pic_2" />
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:padding="15dp"
                app:srcCompat="@drawable/sp_mychoize"
                android:contentDescription="@string/clg_pic_2" />
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sp_talk_to_my_hand"
                android:contentDescription="@string/clg_pic_2" />
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sp_abstract_reality"
                android:contentDescription="@string/clg_pic_2" />
            <ImageView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sp_gaadi_360"
                android:contentDescription="@string/clg_pic_2" />
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:srcCompat="@drawable/sp_macd"
                android:contentDescription="@string/clg_pic_2" />
        </ViewFlipper>



    </RelativeLayout>

    <View
        android:layout_below="@+id/slide2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_width="100dp"

        android:layout_height="1dp"
        android:background="@color/brown" />
    </RelativeLayout>
    </ScrollView>


</RelativeLayout>


