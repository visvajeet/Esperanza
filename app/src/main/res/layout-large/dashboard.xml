<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:elevation="5dp"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolbar_dashboard"
        app:title="My Account"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_dashboard"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout

        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/fill"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:id="@+id/ll">

        <ImageView

            android:layout_marginTop="20dp"
            android:gravity="center"
            android:src="@drawable/qr_code"
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_height="180dp"
            android:id="@+id/qr_code" />

        <TextView
            android:text="@string/dot"
            android:textAlignment="center"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_name" />

        <TextView
            android:text="@string/dott"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_email" />

        <TextView
            android:text="@string/thanks_for_registration"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView27" />

        <TextView
            android:text="@string/please_bring_your_mobile_when_come_for_event_registration"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp"

            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView28" />

        <Button
            android:textSize="18dp"
            android:text="@string/more"
            android:background="@color/sky"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/more_op">

        </Button>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:id="@+id/layout_more"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:textColor="@color/white"
                android:text="@string/delete_ac"
                android:background="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_ac"
                android:layout_weight="5" />
            <Button
                android:textColor="@color/white"
                android:text="@string/log_out"
                android:background="@color/sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signOut"
                android:layout_weight="5" />
        </LinearLayout>



    </LinearLayout>
    </RelativeLayout>
    </ScrollView>



</RelativeLayout>